<nav class="navbar navbar-light bg-faded">
  <h3>Pages</h3>
</nav>

<div>
  <%= link_to("Add New Page", {:action => 'new'}, :class => "btn btn-secondary action new") %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Visible</th>
      <th>Permalink</th>
      <th></th>
      <th>Actions</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |sub| %>
        <tr>
          <th scope="row"><%= sub.name %></th>
          <td><%= sub.position %></td>
          <td><%= sub.visible %></td>
          <td><%= sub.permalink %></td>
          <td><%= link_to("Show", {:action => 'show', :id => sub.id}, :class => "action show") %></td>
          <td><%= link_to("Edit", {:action => 'edit', :id => sub.id}, :class => "action edit") %></td>
          <td><%= link_to("Delete", {:action => 'delete', :id => sub.id}, :class => "action delete") %></td>
        </tr>
    <% end %>
  </tbody>
</table>
