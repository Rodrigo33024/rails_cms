<%= error_message_for(@page) %>
<fieldset class="form-group">
  <%= f.label(:subject_id, "Subject:") %>
  <%= f.select(:subject_id, @subjects.map {|s| [s.name, s.id]}, class: 'form-control') %>
</fieldset>
<fieldset class="form-group">
  <%= f.label(:name, "Name:") %>
  <%= f.text_field(:name, class: 'form-control') %>
</fieldset>
<fieldset class="form-group">
  <%= f.label(:permalink, "Permalink:") %>
  <%= f.text_field(:permalink, class: 'form-control') %>
</fieldset>
<fieldset class="form-group">
  <%= f.label(:position, "Position:") %>
  <%= f.select(:position, 1..@page_count, class: 'form-control') %>
</fieldset>
<fieldset class="form-group">
  <%= f.label(:visible, "Visible:") %>
  <%= f.check_box(:visible, class: 'form-control') %>
</fieldset>
