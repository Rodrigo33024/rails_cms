<fieldset class="form-group">
  <%= f.label(:page_id, "Page ID:") %>
  <%= f.text_field(:page_id, class: 'form-control') %>
</fieldset>
<fieldset class="form-group">
  <%= f.label(:name, "Name:") %>
  <%= f.text_field(:name, class: 'form-control') %>
</fieldset>
<fieldset class="form-group">
  <%= f.label(:position, "Position:") %>
  <%= f.text_field(:position, class: 'form-control') %>
</fieldset>
<fieldset class="form-group">
  <%= f.label(:visible, "Visible:") %>
  <%= f.check_box(:visible, class: 'form-control') %>
</fieldset>
<fieldset class="form-group">
  <%= f.label(:content_type, "Content Type:") %>
  <%= f.radio_button(:content_type, 'text') %> Text
  <%= f.radio_button(:content_type, 'HTML') %> HTML
</fieldset>
<fieldset class="form-group">
  <%= f.label(:content, "Content:") %>
  <%= f.text_area(:content, class: 'form-control', :size => '40x10') %>
</fieldset>
