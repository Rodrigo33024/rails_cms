<% @page_title = 'Sections' %>
<nav class="navbar navbar-light bg-faded">
  <h3>Sections</h3>
</nav>

<div>
  <%= link_to("<< Back to Pages", {:controller => 'pages', :action => 'index', :subject_id => @page.subject_id}, :class => "btn btn-secondary action new") %>
</div>

<div>
  <%= link_to("Add New Section", {:action => 'new', :page_id => @page.id, :page_id => @page.id}, :class => "btn btn-secondary action new") %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Page ID</th>
      <th>Name</th>
      <th>Position</th>
      <th>Visible</th>
      <th>Content Type</th>
      <th></th>
      <th>Actions</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sections.each do |section| %>
        <tr>
          <td><%= section.page_id %></td>
            <td><%= section.page.name if section.page %></td>
          <td><%= section.name %></td>
          <td><%= section.position %></td>
          <td><%= status_tag(section.visible) %></td>
          <td><%= section.content_type %></td>
          <td><%= link_to("Show", {:action => 'show', :id => section.id, :page_id => @page.id}, :class => "action show") %></td>
          <td><%= link_to("Edit", {:action => 'edit', :id => section.id, :page_id => @page.id}, :class => "action edit") %></td>
          <td><%= link_to("Delete", {:action => 'delete', :id => section.id, :page_id => @page.id}, :class => "action delete") %></td>
        </tr>
    <% end %>
  </tbody>
</table>
